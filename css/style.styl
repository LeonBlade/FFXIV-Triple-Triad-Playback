vertical-align()
	position relative;
	top 50%
	-webkit-transform translateY(-50%)
	-ms-transform translateY(-50%)
	transform translateY(-50%)

filter(args)
	filter args
	-webkit-filter args

body
	background-color #555
	padding 20px
	color #FFF

board
	row	
		display block

deck
	space
		position relative
		width 104px
		height 128px
		display inline-block
		clear both
		&::after
			content ""
			background url("/images/back/default.png")
			opacity 0.5
			top 0
			left 0
			bottom 0
			right 0
			position absolute
			z-index -1; 

card
	display inline-block
	float left
	width 104px
	height 128px
	&.dragging
		.card
			filter drop-shadow(0 10px 10px #000)

.cardThumb
	position relative
	display inline-block
	width 40px
	height 40px
	margin 5px
	div.effects
		position absolute
		width 100%
		height 100%
		top 0
		left 0
		border-radius 4px
		box-shadow 0 1px 3px #000
		border-top 1px solid rgba(255,255,255,.5)
		background-image -webkit-gradient(linear, left top, left bottom, color-stop(0%,rgba(255,255,255,0.25)), color-stop(100%,rgba(255,255,255,0.0)))
	div.hover
		display none
		cursor pointer
		img
			position absolute
			&.star
				top 7px
				left 6px
			&.type
				top 10px
				right 10px
			&.card-top
				top 0
				left 13px
			&.card-bottom
				bottom 0
				left 13px
			&.card-left
				top 14px
				left 0
			&.card-right
				top 14px
				right 0
	&:hover
		div.hover
			display block
			border-radius 4px
			background rgba(0, 0, 0, 0.5)
			position absolute
			width 100%
			height 100%
			top 0
			left 0

.card
	position relative
	display inline-block
	width 104px
	height 128px	
	img
		position absolute
		&.star
			top 6px
			left 9px
		&.type
			top 3px
			right 4px
		&.card-top
			bottom 26px
			left 44px
		&.card-left
			bottom 19px
			left 32px
		&.card-bottom
			bottom 12px
			left 44px
		&.card-right
			bottom 19px
			right 33px

#board
	display inline-block
	.row
		.space
			display inline-block
			background #CCC
			width 140px
			height 140px
			.card
				vertical-align()