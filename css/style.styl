vertical-align()
	position relative;
	top 50%
	-webkit-transform translateY(-50%)
	-ms-transform translateY(-50%)
	transform translateY(-50%)

filter(args)
	filter args
	-webkit-filter args

@keyframes thumbHoverFaces
	0%
	33%
		opacity 1
	34%
	100%
		opacity 0
@keyframes thumbHoverRarity
	0%
	33%
	67%
	100%
		opacity 0
	34%
	66%
		opacity 1
@keyframes thumbHoverType
	0%
	33%
	66%
		opacity 0
	67%
	100%
		opacity 1

// allows any draggable object's images to be undraggable
*[draggable=true]
	img
		pointer-events none

body
	background-color #555
	padding 20px
	board
		width 450px
		height 450px
		display flex
		flex-flow row wrap
		space
			display flex
			//align-content center
			//align-items center
			background white
			width 140px
			height 140px
			margin 5px
	deck
		space
			position relative
			width 104px
			height 128px
			display inline-block
			&::after
				content ""
				background url("/images/back/default.png")
				opacity 0.5
				top 0
				left 0
				bottom 0
				right 0
				position absolute
				z-index -1; 
	card
		margin auto
		width 104px
		height 128px
		.cardThumb
			position relative
			display inline-block
			width 40px
			height 40px
			margin 5px
			div.effects
				position absolute
				width 100%
				height 100%
				top 0
				left 0
				border-radius 4px
				box-shadow 0 1px 3px #000
				border-top 1px solid rgba(255,255,255,.5)
				background-image -webkit-gradient(linear, left top, left bottom, color-stop(0%,rgba(255,255,255,0.25)), color-stop(100%,rgba(255,255,255,0.0)))
			div.hover
				div.numbers
					opacity 0
				img
					position absolute
					&.star
						opacity 0
						top 7px
						left 6px
					&.type
						opacity 0
						top 10px
						right 10px
					&.card-top
						top 0
						left 13px
					&.card-bottom
						bottom 0
						left 13px
					&.card-left
						top 14px
						left 0
					&.card-right
						top 14px
						right 0
			&:hover
				div.hover
					display block
					border-radius 4px
					background rgba(0, 0, 0, 0.5)
					position absolute
					width 100%
					height 100%
					top 0
					left 0
					div.numbers
						-webkit-animation thumbHoverFaces 4.5s
						-webkit-animation-iteration-count infinite
						animation thumbHoverFaces 4.5s
						animation-iteration-count infinite
					img.star
						-webkit-animation thumbHoverRarity 4.5s
						-webkit-animation-iteration-count infinite
						animation thumbHoverFaces 4.5s
						animation-iteration-count infinite
					img.type
						-webkit-animation thumbHoverType 4.5s
						-webkit-animation-iteration-count infinite
						animation thumbHoverFaces 4.5s
						animation-iteration-count infinite
		.card
			position relative
			display inline-block
			width 104px
			height 128px	
			img
				position absolute
				&.star
					top 6px
					left 9px
				&.type
					top 3px
					right 4px
				&.card-top
					bottom 26px
					left 44px
				&.card-left
					bottom 19px
					left 32px
				&.card-bottom
					bottom 12px
					left 44px
				&.card-right
					bottom 19px
					right 33px
	#board
		display inline-block
		.row
			.space
				display inline-block
				background #CCC
				width 140px
				height 140px
				.card
					vertical-align()
